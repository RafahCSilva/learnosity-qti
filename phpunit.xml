<phpunit bootstrap="./tests/bootstrap.php">

  <testsuites>
    <testsuite name="unit">
      <directory>tests/Unit</directory>
    </testsuite>
    <testsuite name="integration">
      <directory>tests/Integration</directory>
    </testsuite>
  </testsuites>
  <coverage cacheDirectory="./reports/.phpunit.cache/code-coverage">
    <include>
      <directory suffix=".php">src</directory>
    </include>

    <exclude>
      <directory suffix=".php">./src/Entities</directory>
    </exclude>

    <report>
      <clover outputFile="./reports/coverage/coverage.xml"/>
      <html outputDirectory="tests/_reports/_coverage/html-coverage" title="Learnosity" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
    </report>
  </coverage>

  <logging>
    <junit outputFile="./reports/coverage/junit.xml" logIncompleteSkipped="false"/>
  </logging>

</phpunit>
